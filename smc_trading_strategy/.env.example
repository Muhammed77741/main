# Telegram Bot Configuration (optional)
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram Chat ID
# For personal chat: Get from @userinfobot
# For channel: Use @username or -100123456789
TELEGRAM_CHAT_ID=your_chat_id_here

# MT5 Credentials (optional - if not provided, will use current MT5 terminal session)
MT5_LOGIN=your_account_number
MT5_PASSWORD=your_password
MT5_SERVER=your_broker_server

# Trading Symbol and Timeframe
SYMBOL=XAUUSD
TIMEFRAME=H1

# Signal check interval in seconds (default: 3600 = 1 hour)
# Recommended: 3600 for 1H timeframe
CHECK_INTERVAL=3600

# Position monitoring interval in seconds (default: 30)
# How often to check MT5 positions for TP/SL hits
MONITOR_INTERVAL=30

# Take Profit levels in points
TP1=30
TP2=50
TP3=80

# Percentage to close at each TP level
CLOSE_PCT1=0.5
CLOSE_PCT2=0.3
CLOSE_PCT3=0.2
