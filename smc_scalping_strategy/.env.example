# ⚡ SCALPING BOT CONFIGURATION

# ===============================================
# TELEGRAM (обязательно для уведомлений)
# ===============================================
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ===============================================
# MT5 CONNECTION (опционально)
# ===============================================
# Если не указать - использует открытый MT5 терминал
# MT5_LOGIN=12345678
# MT5_PASSWORD=your_password
# MT5_SERVER=YourBroker-Demo

# ===============================================
# TRADING SETTINGS
# ===============================================
MT5_SYMBOL=XAUUSD

# Частота проверки сигналов (секунды)
# 300 = 5 минут (максимум сигналов, высокая нагрузка)
# 600 = 10 минут (рекомендуется для баланса)
# 900 = 15 минут (меньше нагрузки)
SCALP_CHECK_INTERVAL=600

# ===============================================
# TAKE PROFIT LEVELS (пункты)
# ===============================================
# Консервативные (рекомендуется):
TP1=5
TP2=10
TP3=15

# Агрессивные (для узкого спреда):
# TP1=3
# TP2=7
# TP3=12

# Пассивные (для широкого спреда):
# TP1=8
# TP2=15
# TP3=25

# ===============================================
# PARTIAL CLOSE PERCENTAGES
# ===============================================
# Какой процент позиции закрывать на каждом TP
CLOSE_PCT1=0.5  # 50% на TP1
CLOSE_PCT2=0.3  # 30% на TP2
CLOSE_PCT3=0.2  # 20% на TP3

# ===============================================
# POSITION MANAGEMENT
# ===============================================
# Таймаут позиции в часах (принудительное закрытие)
# 2 = агрессивный скальпинг
# 4 = стандарт (рекомендуется)
# 8 = пассивный скальпинг
POSITION_TIMEOUT=4

# ===============================================
# RISK MANAGEMENT (для будущих версий)
# ===============================================
# MAX_TRADES_PER_DAY=10      # Максимум сделок в день
# MAX_LOSS_PER_DAY=-3.0      # Остановка при -3% за день
# MAX_PROFIT_PER_DAY=5.0     # Взять прибыль при +5% за день
# MAX_OPEN_POSITIONS=2       # Максимум открытых позиций
# RISK_PER_TRADE=1.0         # Риск на сделку в %

# ===============================================
# NOTES
# ===============================================
# - Скопируйте этот файл в .env и заполните ваши данные
# - НЕ коммитьте .env в git (он в .gitignore)
# - Используйте консервативные настройки для начала
# - Тестируйте на demo счете минимум 1 месяц
# - Следите за спредом: если >3 пункта, не торгуйте
# - Торгуйте только в активные сессии (London/NY)
